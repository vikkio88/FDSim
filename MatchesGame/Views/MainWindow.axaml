<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="clr-namespace:Avalonia.ReactiveUI;assembly=Avalonia.ReactiveUI"
        xmlns:vm="using:MatchesGame.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MatchesGame.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="MatchesGame">

    <DockPanel>
        <rxui:RoutedViewHost Router="{Binding Router}" DockPanel.Dock="Top"> 
            <!-- PageTransition="{x:Null}"> -->
            <rxui:RoutedViewHost.PageTransition>
                <CrossFade Duration="0:00:00.200" />
            </rxui:RoutedViewHost.PageTransition>
            <rxui:RoutedViewHost.DefaultContent>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="500" Width="500"></StackPanel>
            </rxui:RoutedViewHost.DefaultContent>
        </rxui:RoutedViewHost>
        <StackPanel DockPanel.Dock="Bottom">
            <Button Command="{Binding GoNext}">Next</Button>
            <Button Command="{Binding GoBack}">Back</Button>
            <TextBlock Text="{Binding Router.NavigationStack.Count}" />
        </StackPanel>
    </DockPanel>

</Window>
