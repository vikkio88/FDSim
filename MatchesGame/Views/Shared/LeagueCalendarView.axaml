<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:converters="clr-namespace:MatchesGame.Helpers.Converters"
  xmlns:i="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
  mc:Ignorable="d"
  d:DesignWidth="800"
  d:DesignHeight="450"
  x:Class="MatchesGame.Views.Shared.LeagueCalendarView">
  <ScrollViewer Grid.Row="1"
    Grid.Column="0"
    VerticalScrollBarVisibility="Auto"
    HorizontalContentAlignment="Center">
    <ItemsControl x:Name="LeagueViewRoot"
      Items="{Binding League.Rounds}">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <!-- Each Round  -->
          <StackPanel Orientation="Vertical"
            Spacing="5"
            Margin="0,5,0,0">
            <TextBlock Classes="H3"
              Text="{Binding}" />
            <ItemsControl x:Name="RoundRoot"
              Items="{Binding Matches}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <!-- Single Match In round  -->
                  <Border Classes="RowItem"
                    Margin="2,2,2,0">
                    <Grid ColumnDefinitions="*,*,*,*,*,*">
                      <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                      </Grid.RowDefinitions>
                      <!-- Home Team -->
                      <TextBlock Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Classes="VCent HCent">
                        <TextBlock.Text>
                          <MultiBinding Converter="{x:Static converters:TeamIdToNameMap.Instance}">
                            <Binding Path="HomeId" />
                            <Binding Path="DataContext.TeamNameMap"
                              ElementName="LeagueViewRoot" />
                          </MultiBinding>
                        </TextBlock.Text>
                      </TextBlock>

                      <!-- Separation between teams -->
                      <StackPanel Grid.Row="0"
                        Grid.Column="2"
                        Grid.ColumnSpan="1">

                        <!-- Showing VS if match not played -->
                        <TextBlock Classes="VCent HCent">
                          <TextBlock.IsVisible>
                            <MultiBinding Converter="{x:Static converters:MatchIdToUnPlayedBool.Instance}">
                              <Binding Path="Id" />
                              <Binding Path="DataContext.ResultMap"
                                ElementName="LeagueViewRoot" />
                            </MultiBinding>
                          </TextBlock.IsVisible>
                          <TextBlock.Text>vs</TextBlock.Text>
                        </TextBlock>


                        <!-- Showing Result if match played -->
                        <TextBlock Classes="VCent HCent">
                          <TextBlock.IsVisible>
                            <MultiBinding Converter="{x:Static converters:MatchIdToPlayedBool.Instance}">
                              <Binding Path="Id" />
                              <Binding Path="DataContext.ResultMap"
                                ElementName="LeagueViewRoot" />
                            </MultiBinding>
                          </TextBlock.IsVisible>
                          <TextBlock.Text>
                            <MultiBinding Converter="{x:Static converters:MatchIdToResultMap.Instance}">
                              <Binding Path="Id" />
                              <Binding Path="DataContext.ResultMap"
                                ElementName="LeagueViewRoot" />
                            </MultiBinding>
                          </TextBlock.Text>
                        </TextBlock>

                      </StackPanel>



                      <!-- Away Team -->
                      <TextBlock Grid.Row="0"
                        Grid.Column="3"
                        Grid.ColumnSpan="2"
                        Classes="VCent HCent">
                        <TextBlock.Text>
                          <MultiBinding Converter="{x:Static converters:TeamIdToNameMap.Instance}">
                            <Binding Path="AwayId" />
                            <Binding Path="DataContext.TeamNameMap"
                              ElementName="LeagueViewRoot" />
                          </MultiBinding>
                        </TextBlock.Text>
                      </TextBlock>

                      <!-- Actions Buttons -->
                      <StackPanel Orientation="Horizontal"
                        Grid.Row="0"
                        Grid.Column="6"
                        Grid.ColumnSpan="1"
                        HorizontalAlignment="Right">
                        <StackPanel.IsVisible>
                          <MultiBinding Converter="{x:Static converters:MatchIdToPlayedBool.Instance}">
                            <Binding Path="Id" />
                            <Binding Path="DataContext.ResultMap"
                              ElementName="LeagueViewRoot" />
                          </MultiBinding>
                        </StackPanel.IsVisible>
                        <Button Classes="SmallButton"
                          Grid.Row="0"
                          Grid.Column="1"
                          Margin="0,0,5,0"
                          Command="{Binding #LeagueViewRoot.DataContext.ViewMatchResult}"
                          CommandParameter="{Binding Id}">
                          <i:Icon Value="fa fa-info" />
                        </Button>
                      </StackPanel>
                    </Grid>
                  </Border>
                  <!-- EO Single Match in Round -->

                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
          <!-- EO Each Round  -->
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </ScrollViewer>
</UserControl>