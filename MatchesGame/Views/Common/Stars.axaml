<Styles xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:i="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
  xmlns:controls="using:MatchesGame.Views.Common">
  <Design.PreviewWith>
    <controls:Stars/>
  </Design.PreviewWith>
  <Style Selector="controls|Stars">
    <Setter Property="Template">
      <ControlTemplate>
        <StackPanel Orientation="Horizontal"
          Spacing="2">
          <i:Icon Value="fa fa-star"
            FontSize="10"
            IsVisible="{Binding FullStars[0]}"/>
          <i:Icon Value="fa fa-star"
            FontSize="10"
            IsVisible="{Binding FullStars[1]}"/>
          <i:Icon Value="fa fa-star"
            FontSize="10"
            IsVisible="{Binding FullStars[2]}"/>
          <i:Icon Value="fa fa-star"
            FontSize="10"
            IsVisible="{Binding FullStars[3]}"/>
          <i:Icon Value="fa fa-star"
            FontSize="10"
            IsVisible="{Binding FullStars[4]}"/>
          <i:Icon Value="fa fa-star-half"
            FontSize="10"
            IsVisible="{Binding HalfStar}"/>
        </StackPanel>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>